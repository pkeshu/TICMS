<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="16dp"
        >
        <android.support.constraint.ConstraintLayout
            android:id="@+id/rootLayout"
            android:background="@drawable/custom_seen_notification_item_bg"
            android:elevation="1dp"
            android:layout_marginBottom="1dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="2dp">
            <TextView
                android:id="@+id/team_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Name:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/team_description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Description:"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="@+id/team_name_label"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/team_name_label"
                app:layout_constraintTop_toBottomOf="@+id/team_name_label"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/team_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Type:"
                app:layout_constraintEnd_toEndOf="@+id/team_description_label"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/team_description_label"
                app:layout_constraintTop_toBottomOf="@+id/team_description_label"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorBlack"
                />

            <TextView
                android:id="@+id/team_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Team Name"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/team_name_label"
                app:layout_constraintStart_toEndOf="@+id/team_name_label"
                app:layout_constraintTop_toTopOf="@+id/team_name_label"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/team_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Team Description"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@+id/team_description_label"
                app:layout_constraintStart_toEndOf="@+id/team_description_label"
                app:layout_constraintTop_toTopOf="@+id/team_description_label"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/team_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Team Type"
                app:layout_constraintBottom_toBottomOf="@+id/team_type_label"
                app:layout_constraintStart_toEndOf="@+id/team_type_label"
                app:layout_constraintTop_toTopOf="@+id/team_type_label"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/colorBlack"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>